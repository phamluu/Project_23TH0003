@using QLHocPhan_23TH0003.Enums
@using QLHocPhan_23TH0003.ViewModel
@model HocPhiHocKyViewModel

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-4 p-4">
        <h3 class="text-center mb-4 text-primary fw-bold">
            <i class="fas fa-credit-card me-2"></i>Hình thức thanh toán học phí
        </h3>

        <form method="post" action="@Url.Action("ThanhToan", "HocPhi_23TH0003")">
            @Html.Hidden("IdHocKy", Model.HocKy)

            <div class="mb-4">
                <label class="form-label fw-semibold fs-5">Số tiền cần nộp:</label>
                <div class="fs-4 text-danger fw-bold border p-2 rounded bg-light">
                    @String.Format("{0:N0} VNĐ", Model.ConNo)
                </div>
            </div>

            <div class="mb-4">
                <label class="form-label fw-semibold fs-5">Chọn phương thức thanh toán:</label>
                <select class="form-select form-select-lg" name="Method" required>
                    <option value="@((int)PhuongThucThanhToan.vietqr)">VietQR - QR Code Ngân hàng</option>
                    <option value="@((int)PhuongThucThanhToan.zalopay)">Zalo pay</option>
                    <option value="@((int)PhuongThucThanhToan.vnpay)">VN pay</option>
                </select>
            </div>

            <div class="d-flex justify-content-between mt-4">
                <a href="javascript:history.back()" class="btn btn-outline-secondary px-4">
                    <i class="fas fa-arrow-left me-1"></i> Quay lại
                </a>
                <button type="submit" class="btn btn-primary px-4">
                    Tiếp tục &amp; Nộp phần còn thiếu <i class="fas fa-arrow-right ms-1"></i>
                </button>
            </div>
        </form>
    </div>
</div>

<!-- FontAwesome CDN (chỉ cần nếu chưa có) -->
