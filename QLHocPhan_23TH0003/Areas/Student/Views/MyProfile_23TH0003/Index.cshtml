@using Microsoft.AspNetCore.Identity
@using QLHocPhan_23TH0003.ViewModel
@model UserViewModel

@{
    var isCurrentUser = User.Identity.Name == Model.UserName;
    ViewBag.Title = isCurrentUser ? "Tài khoản của tôi" : $"Tài khoản của {Model.UserName}";
}

<div class="container py-5">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-primary text-white text-center">
            <h4 class="mb-0">
                <i class="bi bi-person-circle me-2"></i>@ViewBag.Title
            </h4>
        </div>
        <div class="card-body">
            @Html.Partial("_AlertMessages")

            <div class="row">
                <div class="col-md-6 border-end">
                    <h5 class="mb-3 text-primary">Thông tin đăng nhập</h5>
                    <div class="mb-2"><strong>Tên đăng nhập:</strong> @Model.UserName</div>
                    <div class="mb-2"><strong>Email xác nhận:</strong> @(Model.EmailConfirmed ? "✓ Đã xác nhận" : "✗ Chưa xác nhận")</div>
                    <div class="mb-2"><strong>Số lần đăng nhập thất bại:</strong> @Model.AccessFailedCount</div>
                    <div class="mb-2"><strong>Khóa đăng nhập:</strong> @(Model.LockoutEnabled ? "Bật" : "Tắt")</div>
                    <div class="mb-2"><strong>Thời gian khóa:</strong> @(Model.LockoutEnd?.ToString("dd/MM/yyyy HH:mm") ?? "Không có")</div>

                    @if (Model.GiangVien != null)
                    {
                        <div class="mt-3">
                            <strong>Hồ sơ giảng viên:</strong>
                            <a href="@Url.Action("EditProfileGiangVien", "MyProfile_23TH0003")" class="btn btn-outline-primary btn-sm ms-2">Xem/Sửa</a>
                        </div>
                    }
                    else if (Model.SinhVien != null)
                    {
                        <div class="mt-3">
                            <strong>Hồ sơ sinh viên:</strong>
                            <a href="@Url.Action("EditProfileSinhVien", "MyProfile_23TH0003")" class="btn btn-outline-primary btn-sm ms-2">Xem/Sửa</a>
                        </div>
                    }
                    else
                    {
                        <div class="mt-3 text-muted">
                            <strong>Chưa có hồ sơ.</strong>
                        </div>
                    }
                </div>

                <div class="col-md-6">
                    <h5 class="mb-3 text-primary">Thông tin liên hệ</h5>
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <div><strong>Email:</strong> @Model.Email</div>
                        <a href="#" class="btn btn-outline-secondary btn-sm">Đổi Email</a>
                    </div>

                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <div><strong>Số điện thoại:</strong> @Model.PhoneNumber</div>
                        <a href="#" class="btn btn-outline-secondary btn-sm">Đổi số điện thoại</a>
                    </div>

                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <div><strong>Mật khẩu:</strong></div>
                        <a href="@Url.Action("ChangePassword")" class="btn btn-outline-secondary btn-sm">Đổi mật khẩu</a>
                    </div>

                    @if (!isCurrentUser)
                    {
                        <div class="d-flex justify-content-between align-items-center mt-4">
                            <strong>Vai trò:</strong>
                            <button class="btn btn-outline-primary btn-sm" data-bs-toggle="modal" data-bs-target="#DoiVaiTro">
                                Thay đổi vai trò
                            </button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Modal đổi vai trò -->
    <div class="modal fade" id="DoiVaiTro" tabindex="-1" aria-labelledby="roleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content border-0 shadow">
                <div class="modal-header bg-primary text-white">
                    <h5 class="modal-title" id="roleModalLabel">Đổi vai trò người dùng</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>

                @if (isCurrentUser)
                {
                    <div class="modal-body text-center">
                        <p class="text-danger fw-bold">⚠️ Bạn không thể tự thay đổi vai trò của chính mình.</p>
                    </div>
                }
                else
                {
                    var userRoles = ViewBag.UserRoles as List<string>;
                    var allRoles = ViewBag.AllRoles as List<IdentityRole>;

                    <form action="@Url.Action("UpdateUserRoles", "User_23TH0003")" method="post">
                        <div class="modal-body">
                            <input type="hidden" name="email" value="@Model.Email" />
                            <div class="form-group">
                                @foreach (var role in allRoles)
                                {
                                    <div class="form-check mb-2">
                                        <input class="form-check-input" type="checkbox" name="selectedRoles"
                                               value="@role.Name" id="role_@role.Id"
                                               @(userRoles.Contains(role.Name) ? "checked" : "") />
                                        <label class="form-check-label" for="role_@role.Id">
                                            @role.Name
                                        </label>
                                    </div>
                                }
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="submit" class="btn btn-primary btn-sm">Lưu thay đổi</button>
                            <button type="button" class="btn btn-secondary btn-sm" data-bs-dismiss="modal">Đóng</button>
                        </div>
                    </form>
                }
            </div>
        </div>
    </div>
</div>
