@using Microsoft.AspNetCore.Identity
@using QLHocPhan_23TH0003.ViewModel
@model UserViewModel

<div class="container py-4">
    @{
        bool isMyAccount = User.Identity.Name == Model.UserName;
        ViewBag.Title = isMyAccount ? "Thông tin tài khoản của tôi" : $"Thông tin tài khoản: {Model.UserName}";
    }

    <h3 class="text-center mb-4">@ViewBag.Title</h3>
    @Html.Partial("_AlertMessages")

    <div class="row">
        <div class="col-md-6 mb-3">
            <div class="card shadow-sm rounded-3 p-3">
                <h5 class="mb-3 text-primary">Thông tin hệ thống</h5>
                <p><strong>Tên đăng nhập:</strong> @Model.UserName</p>
                <p><strong>Email xác thực:</strong> @(Model.EmailConfirmed ? "✅ Đã xác thực" : "❌ Chưa xác thực")</p>
                <p><strong>Số lần đăng nhập sai:</strong> @Model.AccessFailedCount</p>
                <p><strong>Khóa đăng nhập:</strong> @(Model.LockoutEnabled ? "🔒 Bật" : "🔓 Tắt")</p>
                <p><strong>Khóa đến:</strong> @(Model.LockoutEnd?.ToString("dd/MM/yyyy HH:mm") ?? "Không")</p>

                @if (Model.GiangVien != null)
                {
                    <div class="mt-3">
                        <strong>Hồ sơ giảng viên:</strong>
                        <a href="@Url.Action("EditProfileGiangVien", "MyProfile_23TH0003")" class="btn btn-outline-primary btn-sm ms-2">Xem / Sửa</a>
                    </div>
                }

                @if (Model.SinhVien != null)
                {
                    <div class="mt-3">
                        <strong>Hồ sơ sinh viên:</strong>
                        <a href="@Url.Action("EditProfileSinhVien", "MyProfile_23TH0003")" class="btn btn-outline-primary btn-sm ms-2">Xem / Sửa</a>
                    </div>
                }

                @if (Model.GiangVien == null && Model.SinhVien == null)
                {
                    <div class="alert alert-warning mt-3">Người dùng chưa có hồ sơ sinh viên hoặc giảng viên.</div>
                }
            </div>
        </div>

        <div class="col-md-6 mb-3">
            <div class="card shadow-sm rounded-3 p-3">
                <h5 class="mb-3 text-primary">Thông tin cá nhân</h5>
                <p><strong>Email:</strong> @Model.Email</p>
                <a href="#" class="btn btn-outline-secondary btn-sm mb-2">Đổi Email</a>

                <p><strong>Số điện thoại:</strong> @Model.PhoneNumber</p>
                <a href="#" class="btn btn-outline-secondary btn-sm mb-2">Đổi số điện thoại</a>

                <div class="mt-3">
                    <p><strong>Mật khẩu:</strong></p>
                    <a href="@Url.Action("ChangePassword")" class="btn btn-outline-danger btn-sm">Thay đổi mật khẩu</a>
                </div>

                @* Bỏ comment để cho phép đổi vai trò *@
                @*<div class="mt-4">
                    <button class="btn btn-outline-warning btn-sm" data-bs-toggle="modal" data-bs-target="#DoiVaiTro">Quản lý vai trò</button>
                </div>*@
            </div>
        </div>
    </div>

    @{
        var userRoles = ViewBag.UserRoles as List<string>;
        var allRoles = ViewBag.AllRoles as List<IdentityRole>;
    }

    <!-- Modal đổi vai trò -->
    <div class="modal fade" id="DoiVaiTro" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content shadow">
                <div class="modal-header bg-light">
                    <h5 class="modal-title" id="exampleModalLabel">Cập nhật vai trò người dùng</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Đóng"></button>
                </div>

                @if (isMyAccount)
                {
                    <div class="modal-body text-center">
                        <div class="alert alert-warning">
                            ❗Bạn không thể thay đổi vai trò của chính mình.
                        </div>
                    </div>
                }
                else
                {
                    <form action="@Url.Action("UpdateUserRoles", "User_23TH0003")" method="post">
                        <div class="modal-body">
                            <input type="hidden" name="email" value="@Model.Email" />
                            <div class="form-group">
                                <label class="mb-2"><strong>Vai trò hiện tại:</strong></label>
                                @foreach (var role in allRoles)
                                {
                                    <div class="form-check mb-1">
                                        <input class="form-check-input"
                                               type="checkbox"
                                               name="selectedRoles"
                                               value="@role.Name"
                                               @(userRoles.Contains(role.Name) ? "checked" : "") />
                                        <label class="form-check-label">@role.Name</label>
                                    </div>
                                }
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="submit" class="btn btn-primary btn-sm">💾 Lưu</button>
                            <button type="button" class="btn btn-secondary btn-sm" data-bs-dismiss="modal">Đóng</button>
                        </div>
                    </form>
                }
            </div>
        </div>
    </div>
</div>
