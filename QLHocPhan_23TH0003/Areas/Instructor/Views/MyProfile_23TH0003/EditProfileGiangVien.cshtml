@model QLHocPhan_23TH0003.Models.GiangVien

<div class="container py-4">
    <h3 class="text-center text-primary mb-4">🧑‍🏫 Cập nhật hồ sơ giảng viên</h3>
    @Html.Partial("_AlertMessages")

    <form action="@Url.Action("EditProfileGiangVien", "MyProfile_23TH0003")" method="post" enctype="multipart/form-data" class="shadow p-4 rounded bg-light">
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.Id)
        @Html.HiddenFor(model => model.UserId)

        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <div class="text-end mt-4 mb-4">
            <input type="submit" value="💾 Lưu thông tin" class="btn btn-primary btn-sm" />
            <a href="@Url.Action("Index", "MyProfile_23TH0003")" class="btn btn-secondary btn-sm ms-2">Quay lại tài khoản</a>
        </div>
        <div class="row">
            <div class="col-md-8">
                <div class="mb-3">
                    <label class="form-label fw-bold">Mã Giảng Viên:</label>
                    <span>@Model.MaGiangVien</span>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold">Khoa:</label>
                    <span>@Model.Khoa?.TenKhoa</span>
                </div>

                <div class="mb-3">
                    <label asp-for="HoTen" class="form-label">Họ tên</label>
                    @Html.EditorFor(model => model.HoTen, new { htmlAttributes = new { @class = "form-control" } })
                    <span asp-validation-for="HoTen" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="NgaySinh" class="form-label">Ngày sinh</label>
                    @Html.TextBoxFor(model => model.NgaySinh, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
                    <span asp-validation-for="NgaySinh" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">Giới tính</label>
                    <div class="d-flex gap-3">
                        <div class="form-check">
                            @Html.RadioButtonFor(model => model.GioiTinh, true, new { @class = "form-check-input", id = "gioitinh-nam" })
                            <label class="form-check-label" for="gioitinh-nam">Nam</label>
                        </div>
                        <div class="form-check">
                            @Html.RadioButtonFor(model => model.GioiTinh, false, new { @class = "form-check-input", id = "gioitinh-nu" })
                            <label class="form-check-label" for="gioitinh-nu">Nữ</label>
                        </div>
                    </div>
                    <span asp-validation-for="GioiTinh" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="DiaChi" class="form-label">Địa chỉ</label>
                    @Html.EditorFor(model => model.DiaChi, new { htmlAttributes = new { @class = "form-control" } })
                    <span asp-validation-for="DiaChi" class="text-danger"></span>
                </div>
            </div>

            <div class="col-md-4 text-center">
                <label class="form-label fw-bold">Ảnh đại diện</label>
                <div class="mb-3">
                    <img id="previewImage"
                         src="/Uploads/@(string.IsNullOrEmpty(Model.HinhDaiDien) ? "default-avatar.png" : Model.HinhDaiDien)"
                         class="rounded-circle border shadow"
                         style="width: 150px; height: 150px; object-fit: cover;" />
                </div>

                @Html.HiddenFor(model => model.HinhDaiDien)

                <button type="button" class="btn btn-outline-primary btn-sm" onclick="document.getElementById('HinhDaiDienFile').click()">
                    📁 Chọn ảnh mới
                </button>

                <input type="file" id="HinhDaiDienFile" name="HinhDaiDienFile" accept="image/*"
                       class="d-none" />

                <span asp-validation-for="HinhDaiDien" class="text-danger d-block mt-1"></span>
            </div>
        </div>

        
    </form>
</div>

@section Scripts {
    <script>
        document.getElementById('HinhDaiDienFile').addEventListener('change', function (event) {
            const fileInput = event.target;
            const preview = document.getElementById('previewImage');

            if (fileInput.files && fileInput.files[0]) {
                const reader = new FileReader();
                reader.onload = function (e) {
                    preview.src = e.target.result;
                };
                reader.readAsDataURL(fileInput.files[0]);
            }
        });
    </script>
}
