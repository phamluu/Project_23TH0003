@using QLHocPhan_23TH0003.Models
@using QLHocPhan_23TH0003.ViewModel
@model BaiHoc
@{
    var DropboxFile = (DropboxFileViewModel)ViewBag.DropboxFile;
    var DropboxVideo = (DropboxFileViewModel)ViewBag.DropboxVideo;
}
<div class="form-group mb-3">
    @Html.HiddenFor(model => model.IdLopHocPhan)
    <label asp-for="TenBaiHoc" class="control-label"><strong>Tên bài học</strong></label>
    @Html.EditorFor(model => model.TenBaiHoc, new { htmlAttributes = new { @class = "form-control" } })
    <span asp-validation-for="MaGiangVien" class="text-danger"></span>
</div>
<div class="form-group mb-3">
    <label asp-for="NoiDung" class="control-label"><strong>Nội dung</strong></label>
    <textarea id="content" name="NoiDung" class="form-control">@Html.Raw(Model.NoiDung)</textarea>
    <span asp-validation-for="NoiDung" class="text-danger"></span>
</div>
<div class="form-group mb-3">
    <label asp-for="TaiLieu" class="control-label"><strong>Tài liệu</strong></label>
    <input type="file" name="TaiLieuFile" />
    <div class="file-item">
        @if (DropboxFile != null)
        {
            <a href="@DropboxFile.DownloadUrl" target="_blank">
                <img src="@DropboxFile.IconUrl" alt="Icon" width="32" height="32" />
            </a>
        }
        
    </div>
    <span asp-validation-for="TaiLieu" class="text-danger"></span>
</div>
<div class="form-group mb-3">
    <label asp-for="Video" class="control-label"><strong>Video</strong></label>
    <input type="file" name="VideoFile" />
    <div class="file-item">
        @if (DropboxVideo != null)
        {
            <a href="@DropboxVideo.DownloadUrl" target="_blank">
                <img src="@DropboxVideo.IconUrl" alt="Icon" width="32" height="32" />
            </a>
        }

    </div>
    <span asp-validation-for="Video" class="text-danger"></span>
</div>