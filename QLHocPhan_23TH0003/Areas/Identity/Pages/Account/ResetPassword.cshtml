@page
@model ResetPasswordModel
@{
    ViewData["Title"] = "Đặt lại mật khẩu";
}

<div class="container mt-5 mb-5">
    <h4 class="text-center">@ViewData["Title"]</h4>
    <hr />
    <form method="post" style="max-width: 400px; margin: auto">
        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

        <!-- Token mã hóa -->
        <input asp-for="Input.Code" type="hidden" />

        <!-- Email -->
        <div class="form-floating mb-3">
            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
            <label asp-for="Input.Email" class="form-label">Email</label>
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>

        <!-- Mật khẩu mới -->
        <div class="form-floating mb-3">
            <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Nhập mật khẩu mới" />
            <label asp-for="Input.Password" class="form-label">Mật khẩu mới</label>
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>

        <!-- Xác nhận mật khẩu -->
        <div class="form-floating mb-3">
            <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Xác nhận lại mật khẩu" />
            <label asp-for="Input.ConfirmPassword" class="form-label">Xác nhận mật khẩu</label>
            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
        </div>

        <button type="submit" class="w-100 btn btn-lg btn-primary">Đặt lại mật khẩu</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
