@using QLHocPhan_23TH0003.Common.Constants
@using QLHocPhan_23TH0003.Common.Helpers
@model IEnumerable<QLHocPhan_23TH0003.Models.HocPhan>
@{
    ViewBag.Title = "Quản lý học phần";
}
<h3>@ViewBag.Title</h3>
<div class="head_action">
    @Html.ModalButton("Thêm mới", "btn-primary", UiConstants.btnCreateModal, UiConstants.CreateModal)
    <a href="@Url.Action("Trash", "HocPhan_23TH0003")" class="btn btn-warning"><i class="fa fa-trash"></i> Thùng rác</a>
</div>
@Html.Partial("_AlertMessages")
<table id="grid">
    <thead>
        <tr>
            <th>
                @Html.DisplayName("Mã học phần")
            </th>
            <th>
                @Html.DisplayName("Tên học phần")
            </th>
            <th>
                @Html.DisplayName("Môn học")
            </th>
            <th>
                @Html.DisplayName("Học kỳ")
            </th>
            <th>
                @Html.DisplayName("Số tín chỉ")
            </th>
            <th>
                @Html.DisplayName("Ngày tạo")
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    </tbody>
</table>

<div class="modal fade" id="@UiConstants.CreateModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    @{
        var model = new QLHocPhan_23TH0003.ViewModel.HocPhanViewModel();
        model.HocKies = ViewBag.IdHocKy;
        model.MonHocs = ViewBag.IdMonHoc;
    }
    @Html.Partial("Create", model)

</div>

<div class="modal fade" id="@UiConstants.EditModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
</div>

<script>
     $(document).ready(function() {
            $('#grid').DataTable({
                processing: true,
                serverSide: true,
                ajax: {
                    url: '/Admin/HocPhan_23TH0003/GetData',
                    type: 'GET'
                },
                columns: [
                    { data: 'maHocPhan' },
                    { data: 'tenHocPhan' },
                    { data: 'tenMonHoc' },
                    { data: 'tenHocKy' },
                    { data: 'soTinChi' },
                    { data: 'ngayTao' },
                    { data: 'action', orderable: false, searchable: false }
                ]
            });
    });
</script>
