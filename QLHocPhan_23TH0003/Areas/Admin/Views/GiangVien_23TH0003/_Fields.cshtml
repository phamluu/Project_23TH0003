@model QLHocPhan_23TH0003.Models.GiangVien
<div class="row">
    <div class="col-md-8">
        <div class="form-group">
            <label asp-for="MaGiangVien" class="control-label"><strong>Mã giảng viên</strong></label>
            @Html.EditorFor(model => model.MaGiangVien, new { htmlAttributes = new { @class = "form-control" } })
            
            <span asp-validation-for="MaGiangVien" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="HoTen" class="control-label"><strong>Họ tên</strong></label>
            @Html.EditorFor(model => model.HoTen, new { htmlAttributes = new { @class = "form-control" } })
            <span asp-validation-for="HoTen" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="NgaySinh" class="control-label"><strong>Ngày sinh</strong></label>
            <label asp-for="NgaySinh" class="control-label">@Html.EditorFor(model => model.NgaySinh, new { htmlAttributes = new { @class = "form-control" , @type = "date" } })</label>
            
            <span asp-validation-for="NgaySinh" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="GioiTinh" class="control-label"><strong>Giới tính</strong></label>
            <label>
                @Html.RadioButtonFor(model => model.GioiTinh, true) Nam
            </label>
            <label>
                @Html.RadioButtonFor(model => model.GioiTinh, false) Nữ
            </label>
            <span asp-validation-for="GioiTinh" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="DiaChi" class="control-label"><strong>Địa chỉ</strong></label>
            @Html.EditorFor(model => model.DiaChi, new { htmlAttributes = new { @class = "form-control" } })
            <span asp-validation-for="DiaChi" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="IdKhoa" class="control-label"><strong>Khoa</strong></label>
            @Html.DropDownListFor(model => model.IdKhoa, (SelectList)ViewBag.IdKhoa, "-- Chọn khoa --", new { @class = "form-control" })
        </div>
    </div>
    <div class="col-md-4">
        <div class="form-group">
            <label asp-for="HinhDaiDien" class="control-label">Hình đại diện</label><br />
            <img id="previewImage" src="/Uploads/@Model.HinhDaiDien" style="width: 100px; height: 100px; object-fit: cover; border: 1px solid #ccc;" />
            @Html.HiddenFor(model => model.HinhDaiDien)
            <input type="file" id="HinhDaiDienFile" name="HinhDaiDienFile" class="form-control file" accept="image/*" />
            <span asp-validation-for="HinhDaiDien" class="text-danger"></span>
        </div>
    </div>
</div>

<script>
    document.getElementById('HinhDaiDienFile').addEventListener('change', function (event) {
        const fileInput = event.target;
        const preview = document.getElementById('previewImage');

        if (fileInput.files && fileInput.files[0]) {
            const reader = new FileReader();

            reader.onload = function (e) {
                preview.src = e.target.result;
            }

            reader.readAsDataURL(fileInput.files[0]);
        }
    });
</script>