@using QLHocPhan_23TH0003.Common.Helpers
@model IEnumerable<QLHocPhan_23TH0003.Models.GiangVien>
<h4>@ViewBag.Title</h4>
<div class="head_action">
    <a href="@Url.Action("Create", "GiangVien_23TH0003")" class="btn btn-primary">Thêm mới</a>
    <a href="@Url.Action("Trash",  "GiangVien_23TH0003")" class="btn btn-warning"><i class="fa fa-trash"></i> Thùng rác</a>
</div>
@Html.Partial("_AlertMessages")
<table id="grid">
    <thead>
        <tr>
            <th>
                @Html.DisplayName("Mã giảng viên")
            </th>
            <th>
                @Html.DisplayName("Họ tên")
            </th>
            <th>
                @Html.DisplayName("Tài khoản")
            </th>
            <th>
                @Html.DisplayName("Khoa")
            </th>
            <th>
                @Html.DisplayName("Ngày tạo")
            </th>
            <th style="width:100px"></th>
            <th style="width:100px"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.MaGiangVien)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HoTen)
                </td>
                <td>
                   @(!string.IsNullOrEmpty(item.UserId) ? "Đã có tài khoản" : "Chưa có tài khoản")
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Khoa.TenKhoa)
                </td>
                
                <td>
                    @Html.DisplayFor(modelItem => item.NgayTao)
                </td>
                <td>
                    @if (item.IsActive)
                    {
                        <a href="@Url.Action("Duyet", "GiangVien_23TH0003", new { id = item.Id, IsActive = false })" class="btn btn-danger">Hủy Duyệt</a>
                    }
                    else
                    {
                        <a href="@Url.Action("Duyet", "GiangVien_23TH0003", new { id = item.Id, IsActive = true })" class="btn btn-info">Duyệt</a>
                    }
                </td>
                <td>
                    @Html.EditButton("GiangVien_23TH0003", item.Id)
                    @Html.DeleteButton(item.Id, Url.Action("Delete", "GiangVien_23TH0003"))
                </td>
            </tr>
        }
    </tbody>
</table>
