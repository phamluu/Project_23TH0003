@model IEnumerable<QLHocPhan_23TH0003.Models.HocKy>
@using QLHocPhan_23TH0003.Common.Constants
@using QLHocPhan_23TH0003.Common.Helpers
<div class="head_action">
    @Html.ModalButton("Thêm mới", "btn-primary", UiConstants.btnCreateModal, UiConstants.CreateModal)
</div>
@Html.Partial("_AlertMessages")
<table id="grid">
    <thead>
        <td>Mã học kỳ</td>
        <td>Tên học kỳ</td>
        <td>Năm học</td>
        <td>Chức năng</td>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr data-id="@item.Id">
                <td>@item.MaHocKy</td>
                <td>@item.TenHocKy</td>
                <td>@item.NamHoc</td>
                <td>
                    @Html.EditButton("HocKy_23TH0003", item.Id)
                    @Html.DeleteButton(item.Id, Url.Action("Delete", "HocKy_23TH0003"))
                </td>
            </tr>
        }
        
    </tbody>
</table>

<div class="modal fade" id="@UiConstants.CreateModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    @Html.Partial("Create", new QLHocPhan_23TH0003.Models.HocKy())
</div>

<div class="modal fade" id="@UiConstants.EditModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    
</div>

<script>
   
    $(document).ready(function() {
        // get edit
        $(".@UiConstants.btnEditModal").on("click", function(){
            var id = $(this).data('id');
            var url = $(this).data('url');
             $.ajax({
                url: url,
                type: 'GET',
                data: { id: id },
                success: function (response) {
                    $("#@UiConstants.EditModal").html(response.html);
                    $("#@UiConstants.EditModal").modal('show');
                },
                error: function () {
                    alert('Có lỗi xảy ra');
                }
            });
        });
        
    })

    
</script>