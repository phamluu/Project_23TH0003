<script>

    $(document).ready(function() {
        // get edit
        $(".@UiConstants.btnEditModal").on("click", function(){
            var id = $(this).data('id');
            var url = $(this).data('url');
             $.ajax({
                url: url,
                type: 'GET',
                data: { id: id },
                success: function (response) {
                    $("#@UiConstants.EditModal").html(response);
                    $("#@UiConstants.EditModal").modal('show');
                },
                error: function () {
                    alert('Có lỗi xảy ra');
                }
            });
        });

    })


</script>