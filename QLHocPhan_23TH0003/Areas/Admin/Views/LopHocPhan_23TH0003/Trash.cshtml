@using QLHocPhan_23TH0003.Common.Constants
@using QLHocPhan_23TH0003.Common.Helpers
@model IEnumerable<QLHocPhan_23TH0003.Models.LopHocPhan>
@{
    ViewBag.Title = "Thùng rác";
}
<h3>@ViewBag.Title</h3>

@Html.Partial("_AlertMessages")

<table id="grid">
    <thead>
        <tr>
            <th>
                @Html.DisplayName("Mã lớp học phần")
            </th>
            <th>
                @Html.DisplayName("Tên lớp học phần")
            </th>
            <th>
                @Html.DisplayName("Học phần")
            </th>
            <th>
                @Html.DisplayName("Ngày tạo")
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.MaLopHocPhan)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TenLopHocPhan)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HocPhan.TenHocPhan)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NgayTao)
                </td>
                <td>
                    @Html.DeleteHardButton(item.Id, Url.Action("HardDelete", "LopHocPhan_23TH0003"))
                    @Html.RestoreButton(item.Id, Url.Action("Restore", "LopHocPhan_23TH0003"))
                </td>
            </tr>
        }
    </tbody>
</table>
