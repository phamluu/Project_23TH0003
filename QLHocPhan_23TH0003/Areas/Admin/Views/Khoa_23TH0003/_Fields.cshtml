@model QLHocPhan_23TH0003.Models.Khoa

<div class="form-group">
    <label asp-for="MaKhoa" class="control-label">Mã khoa</label>
    @Html.EditorFor(model => model.MaKhoa, new { htmlAttributes = new { @class = "form-control" } })
    <span asp-validation-for="MaKhoa" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="TenKhoa" class="control-label">Tên khoa</label>
    @Html.EditorFor(model => model.TenKhoa, new { htmlAttributes = new { @class = "form-control" } })
    <span asp-validation-for="TenKhoa" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="IdTruongKhoa" class="control-label">Trưởng khoa</label>
    @{
        var truongKhoaList = ViewBag.IdTruongKhoa as SelectList ?? new SelectList(Enumerable.Empty<SelectListItem>());
    }
    @Html.DropDownListFor(
            model => model.IdTruongKhoa,
        truongKhoaList,
        "-- Chọn trưởng khoa --",
        new { @class = "form-control" }
        )
    <span asp-validation-for="IdTruongKhoa" class="text-danger"></span>
</div>