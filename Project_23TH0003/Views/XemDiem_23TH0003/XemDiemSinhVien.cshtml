@model Project_23TH0003.Models.XemDiemTongKet
@using Project_23TH0003.Models
@{
    ViewBag.Title = "XemDiemSinhVien";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h4 class="title">Quản lý điểm sinh viên </h4>
<div class="no-print mb-3">
    <button onclick="window.print()">In Bảng Điểm</button>
</div>
@foreach (var yearSemesterGroup in Model.ListDiemHocKy)
{
    int i = 1;
    <p style="text-align:center;"><strong>@yearSemesterGroup.HocKyNamHoc</strong></p>
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th scope="col">STT</th>
                <th scope="col">Khóa học</th>
                <th scope="col">Điểm giữa kì</th>
                <th scope="col">Điểm kết thúc</th>
                <th scope="col">Tín chỉ</th>
                <th scope="col">Điểm Học phần</th>
            </tr>
        </thead>
        @foreach (var item in yearSemesterGroup.ListDiem)
        {
            <tr>
                <td>@i</td>
                <td>@item.Class.Cours.CourseName</td>
                <td>@item.Midterm</td>
                <td>@item.Final</td>
                <td>@item.Class.Cours.Credits</td>
                <td style="color:red;">@item.DiemHP</td>
            </tr>
            i++;
        }
        <tr>
            <td colspan="2"><strong>Tổng số tín chỉ học kỳ:</strong> </td>
            <td colspan="4">@yearSemesterGroup.SoTinChiHocKy</td>
        </tr>
        <tr>
            <td colspan="2"><strong>Điểm trung bình học kỳ: </strong></td>
            <td colspan="4">@yearSemesterGroup.DiemTBHocKy</td>
        </tr>
    </table>
}
<p style="text-align:center; font-size:30px;"><strong>Điểm trung bình tích lũy: </strong><span style="color:red;">@Model.DiemTBTichLuy</span></p>