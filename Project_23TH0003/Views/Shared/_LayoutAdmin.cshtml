<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Ứng dụng Quản lý điểm</title>
    @Styles.Render("~/Content/css")
<link href="~/Content/style.css" rel="stylesheet" />
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-primary">
        <div class="container">
            @Html.ActionLink("Xem điểm", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Toggle navigation" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    @if (User.Identity.IsAuthenticated)
                    {
                        
                            <li>@Html.ActionLink("Khoa", "Index", "Khoa_23TH0003", new { area = "" }, new { @class = "nav-link" })</li>
                            <li>@Html.ActionLink("Môn học", "Index", "KhoaHoc_23TH0003", new { area = "" }, new { @class = "nav-link" })</li>
                            <li>@Html.ActionLink("Người dùng", "Index", "Users_23TH0003", new { area = "" }, new { @class = "nav-link" })</li>
                            <li>@Html.ActionLink("Giảng viên", "Index", "GiangVien_23TH0003", new { area = "" }, new { @class = "nav-link" })</li>
                            <li>@Html.ActionLink("Sinh viên", "Index", "SinhVien_23TH0003", new { area = "" }, new { @class = "nav-link" })</li>
                        

                        if (User.Identity.IsAuthenticated && User.IsInRole("admin") || User.IsInRole("giangvien"))
                        {
                            <li>@Html.ActionLink("Lớp học", "Index", "LopHoc_23TH0003", new { area = "" }, new { @class = "nav-link" })</li>
                        }

                        <li>@Html.ActionLink("Xem điểm", "Index", "DangKyHoc_23TH0003", new { area = "" }, new { @class = "nav-link" })</li>
                    }
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
    </div>
    <footer class="">
        <div class="container">
            <p>&copy; @DateTime.Now.Year - Design by Lê Công Định</p>
        </div>
    </footer>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
