@model Project_23TH0003.Models.Department

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div>
    <h4 class="title">Thông tin khoa</h4>
    <dl class="dl-horizontal">
        <dt>
            Tên khoa
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DepartmentName)
        </dd>

        <dt>
            Trưởng khoa
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Instructor.FullName)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Cập nhật", "Edit", new { id = Model.DepartmentID }, new {@class="btn btn-default"}) |
    @Html.ActionLink("Quay lại danh sách", "Index", "", new { @class = "btn btn-default" })
</p>
