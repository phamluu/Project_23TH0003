@model Project_23TH0003.Models.Cours

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div>
    <h4 class="title">Xem thông tin khoa</h4>
    <dl class="dl-horizontal">
        <dt>
           Tên khóa học
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CourseName)
        </dd>

        <dt>
           Số tín chỉ
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Credits)
        </dd>

        <dt>
            Thuộc khoa
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Department.DepartmentName)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Sửa", "Edit", new { id = Model.CourseID }, new {@class="btn btn-default"}) |
    @Html.ActionLink("Quay lại danh sách", "Index", "", new {@class="btn btn-default"})
</p>
