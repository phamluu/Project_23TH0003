@model Project_23TH0003.Models.Enrollment

@{
    ViewBag.Title = "Xóa đăng ký môn học";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h4 class="title">Xóa đăng ký môn học</h4>

<h6 class="alert-danger">Bạn có chắc chắn muốn xóa?</h6>
<div>
    <dl class="dl-horizontal">
        <dt>
            Sinh viên
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Student.FullName)
        </dd>
        <dt>
            Lớp
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Class.ClassID)
        </dd>

        <dt>
            Điểm giữa kỳ
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Midterm)
        </dd>

        <dt>
           Điểm cuối kỳ
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Final)
        </dd>




    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Xóa" class="btn btn-default" /> |
            @Html.ActionLink("Quay lại danh sách", "Index", "", new {@class = "btn btn-default"})
        </div>
    }
</div>
